---
import Layout from '../layouts/Layout.astro'
import Hero from '@/sections/Hero.astro'
import Projects from '@/sections/Projects.astro'
import CallToAction from '@/sections/CallToAction.astro'
import ClipPathTecnologies from '@/sections/Skills'
import BlockDecoration from '@/components/BlockDecoration.astro'

import { translations } from '@/i18n/translations'

const { title, description } = translations.es
---

<Layout
  title={title}
  description={description}
  canonical="https://yangua.dev"
  robots="index, follow"
>
  <Hero />
  <Projects />
  <ClipPathTecnologies lang="es" client:load>
    <div style="--separation: 6px; opacity: 0.75">
      <BlockDecoration />
    </div>
  </ClipPathTecnologies>
  <CallToAction />
</Layout>
