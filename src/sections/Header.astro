---
import HeaderClip from '@/components/HeaderClip.astro'
import BodyLines from '@/components/BodyLines.astro'
import RoundedCorners from '@/assets/roundedCorners.svg'
import Button from '@/components/Button.astro'
---

<header id='header'>
  <BodyLines />

  <div class='fixed w-full'>
    <HeaderClip position='left' />

    <div class='border-b-grey bg-lightgrey mx-6 border-b px-5 2xl:px-10'>
      <div class='header-inner relative grid h-20 grid-cols-[1fr_2fr_1fr] items-center'>
        <div class='brand-wrap'>
          <a
            href='/'
            class='brand w-nav-brand flex items-center gap-1 leading-none'
            aria-label='home'
            ><img
              width='auto'
              height='64'
              alt=''
              src='/favicon.svg'
              loading='lazy'
              class='brand-image h-12'
            />
            <div class='text-lg leading-none'>
              Yangua
              <div class='font-secondary text-3xl'>DEV.</div>
            </div>
          </a>
        </div>

        <div class='header-secondary 2md:border-x border-x-grey flex h-full items-center px-4'>
          <nav class='w-full'>
            <ul class='flex w-full items-center justify-evenly'>
              <li>
                <a href='#'>Proyectos</a>
              </li>
              <li>
                <a href='#'>Acerca de me</a>
              </li>
              <li>
                <a href='#'>Contactame</a>
              </li>
            </ul>
          </nav>
        </div>

        <div class='header-actions flex justify-end'>
          <Button> HABLEMOS </Button>
        </div>
      </div>
    </div>

    <HeaderClip position='right' />
  </div>

  <RoundedCorners />
</header>
